<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="http://sharpnado.com"
             x:Class="QuizApp.MainPage"
             BackgroundColor="#333232">


    <StackLayout>
        <Label Text="QUIZ APP" FontSize="50" TextColor="White" HorizontalOptions="Center" Margin="0,0,0,30"/>
        <Grid>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            
            <ScrollView Grid.Row="1">
                <!--<Border BackgroundColor="#575757" Padding="10" Margin="10">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="40,40,40,40" />
                    </Border.StrokeShape>-->
                <material:MaterialFrame MaterialTheme="AcrylicBlur" MaterialBlurStyle="Dark" CornerRadius="40" HasShadow="True">
                    <StackLayout Margin="0,10">
                        <StackLayout Padding="10">
                            <Label Text="Nazwa pierwszego gracza" TextColor="White" />
                            <Border  Stroke="#414141" StrokeThickness="2">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10,10,10,10" />
                                </Border.StrokeShape>
                                <Entry x:Name="FirstPlayerLabel" Placeholder="Nazwa" BackgroundColor="#414141" TextColor="White"/>
                            </Border>
                            <Label Text="Nazwa drugiego gracza" TextColor="White" />
                            <Border  Stroke="#414141"
                                     StrokeThickness="2">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10,10,10,10" />
                                </Border.StrokeShape>
                                <Entry x:Name="SecondPlayerLabel" Placeholder="Nazwa" BackgroundColor="#414141" TextColor="White"/>
                            </Border>
                            <Label Text="Ilość pytań" TextColor="White" />
                            <Border  Stroke="#414141" StrokeThickness="2">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10,10,10,10" />
                                </Border.StrokeShape>
                                <Entry x:Name="QuestionsNumberLabel" Placeholder="Wpisz ilość pytań (10-15)" BackgroundColor="#414141" TextColor="White"/>
                            </Border>
                            <!--<Label Text="Czas na odpowiedź" TextColor="White" />
                            <Border  Stroke="#414141" StrokeThickness="2">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10,10,10,10" />
                                </Border.StrokeShape>
                                <Entry x:Name="TimeLabel" Placeholder="Wpisz czas na jedna odpowiedz(od 10 sekund)" BackgroundColor="#414141" TextColor="White"/>
                            </Border>-->
                            <Button Margin="0,20,0,0" x:Name="StartGame" Text="Start" BackgroundColor="#414141" TextColor="White" Clicked="StartGame_Clicked" CornerRadius="10"/>
                        </StackLayout>
                    </StackLayout>
                </material:MaterialFrame>
                <!--</Border> -->
            </ScrollView>
        </Grid>
    </StackLayout>
    
    
</ContentPage>
